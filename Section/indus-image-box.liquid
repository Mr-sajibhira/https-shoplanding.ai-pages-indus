<style>
 .id_{{ section.id }}{
   padding:60px 0px;
   background-color:#cacae1;
 }
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}
.id_{{ section.id }} .container .row{
  display:flex;
  flex-wrap:wrap;
  margin:-15px;
}
.id_{{ section.id }} .container .row .col{
  max-width:33.33%;
  width:100%;
  box-sizing: border-box;
  padding:15px;
}
.id_{{ section.id }} .title{
    font-size: 40px;
    line-height: 120%;
    font-weight: 300;
    color: #100f0e;
    margin: 0px 0px 10px 0px;
    text-align: center; 
}
.id_{{ section.id }} h4{
     font-size: 20px;
    line-height: 140%;
    font-weight: 400;
    color: #1d1e1e;
    font-style: italic;
    margin:0px 0px 40px 0px;
    text-align: center; 
}  
  
.id_{{ section.id }} .image_box{
  
}
.id_{{ section.id }} .image_box img{
  max-width:100%;
  display:block;
  aspect-ratio: 8/9;
  object-fit: cover;
  margin:0px 0px 15px 0px;
}
.id_{{ section.id }} .image_box h3{
     font-size: 20px;
    line-height: 120%;
    font-weight: 300;
    color: #131212;
    margin:0px 0px 12px 0px;
    text-align: center; 
}
.id_{{ section.id }} .image_box .des{
       font-size: 15px;
    line-height: 140%;
    font-weight: 400;
    color: #110000;
    margin:0px 0px 0px 0px;
    text-align: center; 
}


@media(max-width:768px){
  
 .id_{{ section.id }}{
   padding:40px 20px;
 }
.id_{{ section.id }} .container .row{
  gap:10px;
}
.id_{{ section.id }} .container .row .col{
  max-width:100%;
}

.id_{{ section.id }} .title{
     font-size: 30px;
    margin:0px 0px 5px 0px;
}

.id_{{ section.id }} h4{
    margin:0px 0px 30px 0px;
}

.id_{{ section.id }} .image_box h3{
     font-size: 24px;
}
.id_{{ section.id }} .image_box .des{
    font-size: 16px;
}





  
  
} 
</style>

<section class="id_{{ section.id }}">
  <div class="container">
    <h2 class="title">{{ section.settings.title }}</h2>
    <h4>{{ section.settings.des }}</h4>
    <div class="row">
      {% for block in section.blocks %}
        {%  case block.type%}
          {% when "image_box" %}
           <div class="col">
             <div class="image_box">
               {% if block.settings.img != blank %}
                 <img src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="100%" height="100%">
               {% endif %}
               <h3>{{ block.settings.title }}</h3>
               <p class="des">{{ block.settings.text }}</p>
             </div>
            </div>
          {% endcase %}
      {% endfor %}
    </div>
    
    
  </div>
</section>





{% schema %}
  {
    "name": "Indus Image Box",
    "settings": [
      {
        "type": "text",
        "label": "Section Title",
        "id": "title"
      },
      {
        "type": "textarea",
        "label": "Section Text",
        "id": "des"
      }
    ],
    "blocks": [
      {
        "type": "image_box",
        "name":"Image box",
        "settings": [
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          },
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default":"Improved Sleep Quality"
          },
          {
            "type": "textarea",
            "label": "Description",
            "id": "text",
            "default":"I decided to give organic pillowcases a try, and oh, what a difference it has made!"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Indus Image Box",
        "blocks": [
          {
            "type": "image_box",
          },
          {
            "type": "image_box",
          },
          {
            "type": "image_box",
          }
        ]
      }
    ]
  }
{% endschema %}