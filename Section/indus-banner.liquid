<style>
.id_{{ section.id }}{
background-image: url({{section.settings.bg_img | image_url}});
background-position: center;
background-size: cover;
background-repeat: no-repeat;
padding:60px 0px;
}  
.id_{{ section.id }} .container{
  max-width:1200px;
  width:100%;
  margin:0px auto;
}

.id_{{ section.id }} .container .content{
  max-width:50%;
  box-sizing: border-box;
   text-align: center;
}

.id_{{ section.id }} .container .content .happycustomer{
  display: flex;
  align-items: center;
  justify-content: center;
  margin:0px 0px 10px 0px;
}
  
.id_{{ section.id }} .container .content .happycustomer p{
   font-size:15px;
   margin:0px 0px 0px 10px;
}
  
.id_{{ section.id }} .container .content h2{
  font-size:55px;
  font-weight:300;
  line-height:120%;
  color:#0f0e0d;
  margin:0px 0px 10px 0px;
  text-align: center;
}
  
.id_{{ section.id }} .container .content p{
  font-size:18px;
  font-weight:400;
  line-height:140%;
  color:#0f0e0d;
  margin:0px 0px 10px 0px;
  text-align: center;
}  

.id_{{ section.id }} .content .sub_title{
  max-width:60%;
  margin:0px auto 10px auto !important;
}
.id_{{ section.id }} .des{
    font-size:18px;
   font-weight:400;
   line-height:140%;
   color:#0f0e0d;
  margin:0px 0px 30px 0px;
}
  
.id_{{ section.id }} .content .des ul {
    padding-inline-start: 0;
    margin-block: 0;
}

.id_{{ section.id }} .content .des ul li {
    list-style: none;
    margin-bottom: 10px;
    display: flex;
   justify-content: center;
}


.id_{{ section.id }} .des ul li::before {
    content: "âœ”";
    font-size: 18px;
    font-weight: 500;
    margin-right: 10px;
    color: #0f0e0d;
}  

.id_{{ section.id }} .btn {
    display: inline-block;
    text-decoration: none;
    transition-duration: .3s;
    background-color: #3540b3;
    color: #ffffff;
    padding: 8px 24px;
    border: 1px solid #3540b3;
    font-size: 18px;
    font-weight: 400;
    line-height: 140%;
    border-radius: 4px;
}
  
.id_{{ section.id }} .btn:hover{
   background-color: #e68f32;
   border: 1px solid #e68f32;
}


@media(max-width:767px){

.id_{{ section.id }}{
padding:60px 20px;
}

.id_{{ section.id }} .container .content{
  max-width:100%;
}  
  
.id_{{ section.id }} .container .content h2{
  font-size:36px;
  margin:0px 0px 20px 0px;
}
  
.id_{{ section.id }} .content .sub_title{
  max-width:100%;
}
  
.id_{{ section.id }} .des{
    font-size:16px;
}

.id_{{ section.id }} .btn {
    font-size: 16px;
}




  
} 


  
  
  
</style>



<section class="id_{{ section.id }}">
  <div class="container">
    <div class="content">
      <div class="happycustomer">
        <svg xmlns="http://www.w3.org/2000/svg" width="88" height="17" viewBox="0 0 88 17" fill="none">
        <path d="M16 6.60342L10.1863 6.2212L7.99681 0.720703L5.80734 6.2212L0 6.60342L4.45419 10.3855L2.99256 16.1226L7.99681 12.9595L13.0011 16.1226L11.5395 10.3855L16 6.60342Z" fill="#C69858"/>
        <path d="M34 6.60342L28.1863 6.2212L25.9968 0.720703L23.8073 6.2212L18 6.60342L22.4542 10.3855L20.9926 16.1226L25.9968 12.9595L31.0011 16.1226L29.5395 10.3855L34 6.60342Z" fill="#C69858"/>
        <path d="M52 6.60342L46.1863 6.2212L43.9968 0.720703L41.8073 6.2212L36 6.60342L40.4542 10.3855L38.9926 16.1226L43.9968 12.9595L49.0011 16.1226L47.5395 10.3855L52 6.60342Z" fill="#C69858"/>
        <path d="M70 6.60342L64.1863 6.2212L61.9968 0.720703L59.8073 6.2212L54 6.60342L58.4542 10.3855L56.9926 16.1226L61.9968 12.9595L67.0011 16.1226L65.5395 10.3855L70 6.60342Z" fill="#C69858"/>
        <path d="M88 6.60342L82.1863 6.2212L79.9968 0.720703L77.8073 6.2212L72 6.60342L76.4542 10.3855L74.9926 16.1226L79.9968 12.9595L85.0011 16.1226L83.5395 10.3855L88 6.60342Z" fill="#C69858"/>
        </svg>
          <p>{{ section.settings.happycustomer }}</p>
      </div>
       <h2>{{ section.settings.title }}</h2>
       <p class="sub_title">{{ section.settings.sub_title }}</p>
       <div class="des">
          {{ section.settings.des }}
      </div>
          {% if section.settings.btn_url !=blank %}
          <a href="{{ section.settings.btn_url }}" class="btn">{{ section.settings.btn_text }}</a>
          {% endif %}
    </div>
    
  </div>
</section>

{% schema %}
  {
    "name": "Indus Banner",
    "settings": [
      {
        "type": "image_picker",
        "label": "Select BG Image",
        "id": "bg_img"
      },
      {
        "type": "text",
        "label": "Happy Customers",
        "id": "happycustomer",
        "default":"16,000+ Happy Customers"
      },
      {
        "type": "text",
        "label": "Title",
        "id": "title",
        "default":"Don't Miss Out on the Skin Transformation with Ancient Secrets!"
      },
      {
        "type": "textarea",
        "label": "Sub Title",
        "id": "sub_title",
        "default":"age-old ingredients, ethically-sourced, cutting-edge technology"
      },
      {
        "type": "richtext",
        "label": "Description",
        "id": "des"
      },
      {
        "type": "text",
        "label": "Button Text",
        "id": "btn_text",
        "default":"Browse Our Favorites"
      },
      {
        "type": "url",
        "label": "Button",
        "id": "btn_url"
      }
    ],
    "presets": [
      {
      "name": "Indus Banner"
      }
    ]
  }
{% endschema %}