<style>
.id_{{ section.id }}{
  max-width:100%;
  width:100%;
  padding:40px 0px;
  background-color:#3540b3;
}
.id_{{ section.id }} .container{
  max-width:1200px;
  width:100%;
  margin:0px auto;
  text-align: center;
  
}
.id_{{ section.id }} .container .row{
    display: flex;
    flex-wrap: wrap;
    margin:-20px;
}  
.id_{{ section.id }} .container .row .col{
  max-width:33.33%;
  width:100%;
  padding:20px;
  box-sizing: border-box;
} 

   .id_{{ section.id }} h3{
    font-size: 20px;
    line-height: 140%;
    font-weight: 400;
    color: #ffffff;
    margin: 0px 0px 0px 0px;
    text-align: center;
} 
  

.id_{{ section.id }} img{
  max-width:150px;
  width:100%;
  height:90px;
  dispaly:block;
 object-fit: contain;
   display: block;
  margin:0px auto 8px;
}

@media(max-width:768px){
  
  .id_{{ section.id }}{
    padding:40px 20px;
  }
  
  .id_{{ section.id }} .container .row{
    margin:-10px;
  }
.id_{{ section.id }} .container .row .col{
  max-width:100%;
  padding:10px;
}


  .id_{{ section.id }} h3{
    font-size: 20px;
}


  
 } /*media query */
  
</style>



<section class="id_{{ section.id }}">
  <div class="container"> 
     <div class="row">
         {% for block in section.blocks %}
          {% case block.type %}
            {% when 'icon_box' %}
              <div class="col">
                <div class="icon_box">  
                    {% if block.settings.img != blank %}
                          <img src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}"
                           width="100%" height="100%">
                      {% endif %}  
                   {% if block.settings.title != blank %}
                       <h3>{{ block.settings.title }}</h3>
                    {% endif %}
                   {% if block.settings.des != blank %}
                       <p>{{ block.settings.des }}</p>
                    {% endif %}
              </div>
          </div>

         {% endcase %}
       {% endfor %}
           </div>
                      
  </div>
</section>






{% schema %}
  {
    "name": "Indus Icon Box",
    "blocks": [
      {
        "type": "icon_box",
        "name":"Icon Box",
        "limit": 3,
        "settings": [
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          },
          {
          "type": "text",
          "label": "Title",
          "id": "title"
         },
          {
          "type": "text",
          "label": "Description",
          "id": "des"
         }

        ]
      }
    ],
    "presets": [
      {
        "name": "Indus Icon Box"
      }
    ]
  }
{% endschema %}